{
  "name": "@athoscommerce/beacon",
  "version": "1.0.0",
  "author": "athoscommerce",
  "license": "MIT",
  "description": "Javascript library for utilizing Athos Commerce beacon tracking.",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/athoscommerce/beacon.js.git"
  },
  "prettier": "@searchspring/prettier",
  "scripts": {
    "analyze": "webpack --config webpack.prod.js --analyze",
    "build": "rm -rf ./dist && npm run generate && tsc && tsc -p tsconfig.cjs.json && npm run build:cdn",
    "build:cdn": "webpack --config webpack.prod.js",
    "dev:server": "http-server ./public",
    "dev": "tsc --watch",
    "commit": "cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate": "rm -fr ./src/client && openapi-generator-cli generate -i ./beacon.v2.snap.types.oas.yaml -g typescript-fetch -o ./src/client",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}' '!src/client/**'",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky",
    "version": "standard-version -a",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "@searchspring/snap-toolbox": "0.73.7",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/runtime": "^7.21.0",
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "@searchspring/browserslist-config-snap": "^1.0.7",
    "@searchspring/prettier": "1.0.2",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "babel-loader": "^9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "http-server": "^14.1.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "26.0.0",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "standard-version": "9.5.0",
    "ts-jest": "^29.3.0",
    "ts-loader": "9.4.2",
    "typedoc": "0.28.1",
    "typescript": "5.8.2",
    "webpack": "^5.77.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1",
    "whatwg-fetch": "^3.6.20"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": {
    "universal": "extends @searchspring/browserslist-config-snap/universal"
  }
}
